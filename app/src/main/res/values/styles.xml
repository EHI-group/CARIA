<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="normal_normal_cleargreen_big" arent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="normal_subtitle_dark">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>







    <style name="normal_boton_mas_menos">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">string/imagen</item>
    </style>





    <style name="normal_edittext" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textColor">@color/color_purple</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:hint">@string/generic_hint</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>





    <style name="normal_normal_big" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/texo_general</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="normal_normal_medium" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/texo_general</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="normal_normal_medium_bold" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/texo_general</item>
        <item name="android:textSize">17sp</item>
    </style>



    <style name="normal_normal_small" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/texo_general</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="normal_cleargreen_small" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>




    <style name="normal_normal_cleargreen" arent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="normal_tile_greendark" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="normal_image_list">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="normal_image_icono">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="normal_title_clear" parent="android:Theme.Light">
        <item name="android:textColor">@color/fondo_boton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="normal_normal_withe" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="normal_small_withe" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="normal_menu_button" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@null</item>
    </style>







    <!-- cosas utiles -->


    <style name="normal_boton" arent="@android:style/TextAppearance">
        <item name="android:padding">1dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/texo_boton</item>
        <item name="android:textAlignment">center</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/color_purple</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="normal_tile_dark" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">comfortaa_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="normal_line" parent="@android:style/TextAppearance">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/texo_general</item>
    </style>



</resources>
