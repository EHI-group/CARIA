<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_rounded"
    android:padding="8dp">

    <TextView
        android:id="@+id/aregister_est_register"
        style="@style/normal_tile_greendark"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/app_name"
        android:textColor="@color/color_purple"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/aregister_et_name"
        style="@style/normal_edittext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:ems="10"

        android:fontFamily="@font/nunito_light"
        android:hint="@string/hint_nombre"
        android:inputType="textPersonName"
        android:textColor="@color/color_black"
        android:textColorHint="@color/selected_medicinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aregister_est_register" />

    <EditText
        android:id="@+id/aregister_et_numero"
        style="@style/normal_edittext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"

        android:fontFamily="@font/nunito_light"
        android:hint="@string/numero_de_celular"
        android:inputType="numberDecimal"
        android:textColor="@android:color/black"
        android:textColorHint="@color/selected_medicinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aregister_et_name" />

    <Spinner
        android:id="@+id/aregister_sp_spinner"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView64"
        app:layout_constraintTop_toBottomOf="@+id/textView64" />

    <Button
        android:id="@+id/aregister_bt_done"
        style="@style/normal_boton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/redondo2"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/boton_aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aregister_et_aldress" />

    <EditText
        android:id="@+id/aregister_et_aldress"
        style="@style/normal_edittext"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/direccion"
        android:inputType="textPersonName"
        android:textColor="@color/color_black"
        android:textColorHint="@color/selected_medicinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aregister_sp_spinner" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/Terminos_Condiciones"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aregister_bt_done"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/textView64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/ciudad"
        android:textColor="@color/color_purple"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/aregister_et_numero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/aregister_et_numero"
        app:layout_constraintTop_toBottomOf="@+id/aregister_et_numero" />

</androidx.constraintlayout.widget.ConstraintLayout>