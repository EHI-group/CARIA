<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/ishoop_cv_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:background="@android:color/white"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">


            <ImageView
                android:id="@+id/ishoop_iv_icono"
                style="@style/normal_image_list"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/imagen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline26"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ishoop_tv_nombre"
                style="@style/normal_normal_withe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/ishoop_iv_icono"
                android:fontFamily="@font/nunito_semibold"
                android:text="Fruta"
                app:layout_constraintBottom_toBottomOf="@+id/ishoop_iv_icono"
                app:layout_constraintStart_toEndOf="@+id/ishoop_iv_icono"
                app:layout_constraintTop_toTopOf="@+id/ishoop_iv_icono"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/ishoop_tv_precio"
                style="@style/normal_small_withe"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ishoop_tv_nombre"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_extrabold"
                android:textAlignment="textEnd"
                android:textColor="@color/color_purple"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toEndOf="@+id/ishoop_iv_icono"
                app:layout_constraintTop_toBottomOf="@+id/textView38" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintGuide_percent="0.022222223" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/nunito"
                android:text="9999 kg"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/ishoop_iv_icono"
                app:layout_constraintTop_toBottomOf="@+id/ishoop_tv_nombre" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/nunito_light"
                android:text="Precio x gramo 99.9"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/ishoop_iv_icono"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>